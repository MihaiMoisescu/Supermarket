<Window x:Class="Supermarket.Views.AccountsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Supermarket.ViewModels"
        xmlns:localConverter="clr-namespace:Supermarket.Converters"
        mc:Ignorable="d"
        Title="AccountsView" Height="446" Width="700" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Window.DataContext>
        <local:AccountVM/>
    </Window.DataContext>
    <Grid>
        <Grid.Resources>
            <localConverter:AccountConvert x:Key="personConvert" />
        </Grid.Resources>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/background.png"/>
        </Grid.Background>
        <Border Background="#FF7ED957" HorizontalAlignment="Left" Height="96" Margin="19,10,0,0" VerticalAlignment="Top" Width="627" CornerRadius="20"/>
        <Button Content="ADD" HorizontalAlignment="Left" Margin="37,30,0,0" VerticalAlignment="Top" Height="59" Width="169"  Background="#FF129FA7" BorderBrush="{x:Null}" FontFamily="Bradley Hand ITC" FontSize="24">
            <Button.CommandParameter>
                <MultiBinding Converter="{StaticResource personConvert}">
                    <Binding ElementName="txtUser" Path="Text"/>
                    <Binding ElementName="txtPassword" Path="Text"/>
                    <Binding ElementName="txtRole" Path="Text"/>

                </MultiBinding>
            </Button.CommandParameter>
        </Button>

        <Button Content="Delete" HorizontalAlignment="Left" Margin="454,30,0,0" VerticalAlignment="Top" Height="59" Width="169"  Background="#FF129FA7" BorderBrush="{x:Null}" FontFamily="Bradley Hand ITC" FontSize="24" RenderTransformOrigin="0.568,0.543"/>
        <Button Content="Update" HorizontalAlignment="Left" Margin="245,30,0,0" VerticalAlignment="Top" Height="59" Width="169"  Background="#FF129FA7" BorderBrush="{x:Null}" FontFamily="Bradley Hand ITC" FontSize="24" Command="{Binding UpdateAccount}" CommandParameter="{Binding ElementName=personsGrid, Path=SelectedItem}"/>
        <TextBlock HorizontalAlignment="Left" Margin="37,121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="31" Width="74"><Run Text="Username"/><LineBreak/><Run/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="37,185,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="31" Width="74" RenderTransformOrigin="0.459,2.13"><Run Text="Role"/><LineBreak/><Run/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="37,153,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="31" Width="74" Text="Password"/>
        <TextBox Name="txtUser" HorizontalAlignment="Left" Margin="110,121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="222" Height="27"
                Text="{Binding ElementName=personsGrid, Path=SelectedItem.Username,UpdateSourceTrigger=PropertyChanged}"/>
        <TextBox Name="txtRole" HorizontalAlignment="Left" Margin="110,185,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="222" Height="30"
                Text="{Binding ElementName=personsGrid, Path=SelectedItem.Role,UpdateSourceTrigger=PropertyChanged}"/>
        <TextBox Name="txtPassword" HorizontalAlignment="Left" Margin="110,153,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="222" Height="27"
                 Text="{Binding ElementName=personsGrid, Path=SelectedItem.Password,UpdateSourceTrigger=PropertyChanged}"/>
        <DataGrid Name="personsGrid"  Margin="10,222,286,25" AutoGenerateColumns="False"
           ScrollViewer.VerticalScrollBarVisibility="Visible" ItemsSource="{Binding AccountList}" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding AccountID}" />
                <DataGridTextColumn Header="Username" Binding="{Binding Username}" />
                <DataGridTextColumn Header="Password" Binding="{Binding Password}" />
                <DataGridTextColumn Header="Role" Binding="{Binding Role}" />
                <DataGridTextColumn Header="IsActive" Binding="{Binding IsActive}" />

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
